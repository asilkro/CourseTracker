<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="CourseTracker.Maui.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:CourseTracker.Maui.Views"
    xmlns:local="clr-namespace:CourseTracker.Maui"
    Shell.FlyoutBehavior="Locked"
    Title="CourseTracker.Maui">

    <!-- Flyout Menu -->
    <Shell.FlyoutHeader>
        <Label Text="Course Tracker" HorizontalTextAlignment="Center" FontAttributes="Bold"/>
    </Shell.FlyoutHeader>

    <!-- Menu Tabs -->
    <ShellContent Title="Home" ContentTemplate="{DataTemplate views:Homepage}" />

    <FlyoutItem Title="Terms">
        <ShellContent Title="List Terms" ContentTemplate="{DataTemplate views:ListTerms}"/>
        <ShellContent Title="New Term" ContentTemplate="{DataTemplate views:TermPage}"/>
    </FlyoutItem>
    
    <FlyoutItem Title="Courses">
        <ShellContent Title="List Courses" ContentTemplate="{DataTemplate views:ListCourses}"/>
        <ShellContent Title="New Course" ContentTemplate="{DataTemplate views:CoursePage}"/>
    </FlyoutItem>

    <FlyoutItem Title="Assessments">
        <ShellContent Title="List Assessments" ContentTemplate="{DataTemplate views:ListAssessments}"/>
        <ShellContent Title="New Assessment" ContentTemplate="{DataTemplate views:AssessmentPage}"/>
    </FlyoutItem>

</Shell>
