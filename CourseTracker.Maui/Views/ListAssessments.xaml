<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModel="clr-namespace:CourseTracker.Maui.ViewModels"
             x:Class="CourseTracker.Maui.Views.ListAssessments"
             Title="Assessment List">
    <VerticalStackLayout
    Padding="20,10" Spacing="5">
        <Label 
            Text="Courses"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <!-- Display List of Assessments using ListView -->
        <ListView 
            ItemsSource="{Binding Assessment}"
            SelectedItem="{Binding SelectedAssessment}"
            SelectionMode="Single">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell 
                        Text="{Binding A}" 
                        Detail="{Binding DueDate}" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </VerticalStackLayout>
</ContentPage>