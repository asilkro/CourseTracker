<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModel="clr-namespace:CourseTracker.Maui.ViewModels"
             x:DataType="viewModel:HomepageVM"
             x:Class="CourseTracker.Maui.Views.Homepage">
    
    <VerticalStackLayout
        Padding="20, 10"
        Spacing="10">

            <Label Text="Welcome to CourseTracker!" FontSize="Large" FontAttributes="Bold" HorizontalOptions="Center" />
        <Label FontAttributes="Bold" Text="-------------------------------------------------------------------------------"/>
        <Label TextType="Text" HeightRequest="70" FontSize="Medium" LineBreakMode="WordWrap" TextColor="{StaticResource Primary}" HorizontalOptions="CenterAndExpand">
            <Label.Text>
                The Evaluation User Guide may be accessed at any time from the flyout menu in the top-left of the application.
            </Label.Text>
        </Label>
        <Label FontAttributes="Bold" Text="-------------------------------------------------------------------------------"/>
        <Label TextType="Text" HeightRequest="50" FontSize="Medium" FontAttributes="Bold" LineBreakMode="WordWrap" TextColor="{StaticResource Primary}" HorizontalOptions="CenterAndExpand">
            <Label.Text>If this is your 1st time using the application, click C971 - Load Evaluation Data below</Label.Text>
        </Label>

        <Label FontAttributes="Bold" Text="-------------------------------------------------------------------------------"/>
        <Button x:Name="loadSampleDataButton" Text="C971 - Load Evaluation Data" Command="{Binding OnLoadButtonClicked}" FontAttributes="Bold" BackgroundColor="Red" TextColor="AntiqueWhite"/>
        <Button x:Name="resetDbButton" Text="**RESET DATABASE - USE CAUTION**" Command="{Binding OnResetDBButtonClicked}" FontAttributes="Bold" BackgroundColor="Red" TextColor="AntiqueWhite"/>
            <Label FontAttributes="Bold" Text="--------------------------------------------------------------------------------"/>


    </VerticalStackLayout>
</ContentPage>