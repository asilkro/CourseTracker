<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:CourseTracker.Maui.ViewModels"
             x:Class="CourseTracker.Maui.Views.ListTerms"
             x:DataType="viewModels:ListTermsVM"
             Title="Term(s) List">

    <VerticalStackLayout
Padding="20,10" Spacing="5">
        

        <!-- Display List of Terms using ListView -->
        <ListView x:Name="termListView" CachingStrategy="RecycleElement" ItemsSource="{Binding Terms}" 
              ItemTapped="termListView_ItemTapped" IsRefreshing="{Binding IsRefreshing}" SelectionMode="Single">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <Grid Padding="10" RowDefinitions="Auto">
                            <Label Text="{Binding TermName, StringFormat='Term Name: {0}'}" FontAttributes="Bold"/>
                        </Grid>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </VerticalStackLayout>
</ContentPage>