<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:CourseTracker.Maui.ViewModels"
             x:DataType="viewModels:UserGuideVM"
             x:Class="CourseTracker.Maui.Views.UserGuide"
             Title="CourseTracker User Guide">

    <ScrollView Padding="10" Margin="5">
        <Editor Text="{Binding UserGuideText}"  HorizontalOptions="CenterAndExpand"
                IsReadOnly="True" FontSize="Medium" AutoSize="TextChanges" 
                FontAutoScalingEnabled="True"/>
    </ScrollView>

</ContentPage>